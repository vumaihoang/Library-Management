<% provide(:title, @book.title) %>
<div>
  <li><%= link_to "Trang chủ", root_path %></li>
</div>
<hr>
<hr>
<div>
  <div>
    <h2>
      <%= @book.title %>
    </h2>
  </div>
  <div>
    <%= image_tag @book.image.url.to_s,class:"image_book" if @book.image? %>
  </div>
  <div>
    <hr>
      <h5>Tác giả:&nbsp&nbsp&nbsp&nbsp
        <% @authors.each_with_index do |author, index| %>
          <% if index == @authors.size - 1 %>
            <%= link_to author.name || "", author %>
          <% else %>
            <%= link_to author.name + "," || "", author %>
          <% end %>
        <% end %>
      </h5>
    <hr>
      <h5>Nhà xuất bản:&nbsp&nbsp&nbsp
      <% @publishers.each_with_index do |publisher, index| %>
        <% if index == @publishers.size - 1 %>
          <%= link_to publisher.name || "", publisher %>
        <% else %>
          <%= link_to publisher.name + "," || "", publisher%>
        <% end %>
      <% end %>
      </h5>
    <hr>
      <h5>Giá tiền:&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @book.price %></h5>
    <hr>
    <% if current_user.try(:admin?) %>
      <ul>
        <li><%= link_to "Edit book", edit_admin_book_path %></li>
      </ul>
    <% end %>
  </div>
  <div>
    <h2><b>Giới Thiệu Truyện:</b></h2>
  </div>
  <div>
    <h3>
      <%= @book.description %>
    </h3>
  </div>
  </div>
</div>
