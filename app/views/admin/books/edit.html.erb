<h2>Update Book</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3-edit-user">
    <%= form_for :book, url: {action: :update, controller: :books}, method: :put do |f| %>
      <%= f.label :title %><br />
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :description %><br />
      <%= f.text_field :description, class: "form-control" %>
      <%= f.label :price %><br />
      <%= f.number_field :price, class: "form-control" %><br />
      <%= f.label :quantity %><br />
      <%= f.number_field :quantity, class: "form-control" %><br />
      <%= f.file_field :image %>
      <%= f.label "Available" %>
      <%= f.radio_button(:role, "available") %>
      <%= f.label "Unavailable", class: "label_role" %>
      <%= f.radio_button(:role, "unavailable") %>
      <h2>Author</h2>
      <div class="form-group">
        <%= f.select :author_ids, options_for_select(Author.all.map {|author| [author.name, author.id]}, selected: @book.authors.ids), {}, multiple: true, class: "form-control select2" %>
      </div>
      <%= link_to "Create author", new_admin_author_path , class: "btn btn-primary", style:"margin-left: 556px;margin-top: -85px;" %>
      <h2>Publisher</h2>
      <div class="form-group">
        <%= f.select :publisher_ids, options_for_select(Publisher.all.map {|publisher| [publisher.name, publisher.id]}, selected: @book.publishers.ids), {}, multiple: true, class: "form-control select2" %>
      </div>
      <%= link_to "Create publisher", new_admin_publisher_path , class: "btn btn-primary", style:"margin-left: 556px;margin-top: -85px;" %>
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary", style="margin-top: -20px;">Update my book</button>
          <%= link_to "Back", books_path, class: "btn btn-primary", style: "margin-top: -20px;" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
