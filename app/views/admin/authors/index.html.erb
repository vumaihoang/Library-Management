<% provide(:title, "All authors") %>
<h1>All authors</h1>
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th scope="col">Stt</th>
        <th scope="col">Name</th>
        <th scope="col">Country</th>
        <th scope="col">Age</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
  <% @authors.each_with_index do |author, index| %>
  <tbody>
    <tr>
      <th scope="row"><%=index +1 %></th>
      <td> <%= link_to author.name, author %> </td>
      <td> <%= author.country %> </td>
      <td> <%= author.age %> </td>
      <td>
        <%= link_to author_path(author) do %>
          <i class="fa fa-eye "  ></i>
        <% end %>
        <%= link_to edit_admin_author_path(author) do %>
          <i class="fa fa-pencil icon_edit" aria-hidden="true" ></i>
        <% end %>
        <%= link_to admin_destroy_author_path(author), method: :delete do %>
          <i class="fa fa-trash icon_delete" ></i>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
