<% provide(:title, "All users") %>
<div style="display: flex; justify-content: space-between; align-items: center">
<h1>All users</h1>
<% if current_user.admin? %>
    <%= link_to "Create User", new_admin_user_path, class: "btn btn-primary" %>
  <% end %>
</div>
<table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th scope="col">Stt</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Role</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
  <% @users.each_with_index do |user, index| %>
  <tbody>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td> <%= link_to user.name, user %> </td>
      <td> <%= user.email %> </td>
      <td> <%= user.phone %> </td>
      <td> <%= user.role %> </td>
      <td>
        <%= link_to user_path(user) do %>
          <i class="fa fa-eye "  ></i>
        <% end %>
        <%= link_to edit_admin_user_path(user.id) do %>
          <i class="fa fa-pencil icon_edit" aria-hidden="true" ></i>
        <% end %>
        <%= link_to admin_destroy_user_path(user), method: :delete, data: {confirm: "You sure?"} do %>
          <i class="fa fa-trash icon_delete" ></i>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
<p><%= will_paginate @users %></p>
